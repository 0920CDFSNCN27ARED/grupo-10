                    <label for="discount">Descuento</label>
                    <input type="number" name="discount" id="discount" />
                </div>
                <div>
                    <label for="img">Imagen</label>
                    <input type="file" name="img" id="img" />
                </div>
                <div>
                    <button type="submit">Guardar cambios</button>
                </div>
            </div>
        </main>

        <%- include('../partials/footer') %>
    </body>
