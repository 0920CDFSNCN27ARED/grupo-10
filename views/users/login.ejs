<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head", { title: "Login" }) %>
    </head>
    <body>
        <%- include("../partials/header") %>

        <main class="reg-log">
            <h2 class="reg-log-box">Inicia Sesíon</h2>
            <form action="list" method="POST">
                <div class="reg-log-box">
                    <p><label for="user">Usuario</label></p>
                    <input
                        type="text"
                        id="user"
                        name="user"
                        placeholder="Usuario o E-mail"
                    />

                    <p><label for="password">Contraseña</label></p>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Contraseña"
                    />

                    <p><button type="submit" value="Entrar">Entrar</button></p>
                </div>
            </form>
        </main>
        <%- include("../partials/footer") %>
    </body>
</html>
